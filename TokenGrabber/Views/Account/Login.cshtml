@using TokenGrabber.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Login settings";
}

<div class="row">
    <form asp-controller="Account" asp-action="DoLogin" method="post">
        <h2>@ViewData["Title"].</h2>

        <div class="form-group">
            <div class="form-check">
                <input asp-for="ReadScope">
                <label class="form-check-label">
                    Read permission
                </label>
            </div>
        </div>

        <div class="form-group">
            <div class="form-check">
                <input asp-for="WriteScope">
                <label class="form-check-label">
                    Write permission
                </label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <button type="submit" class="btn btn-default">Login</button>
            </div>
        </div>
    </form>
</div>